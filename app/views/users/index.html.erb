<h1 class="color-white-bold center">ALPHA BLOGGERS LISTING</h1>
<div align="center">
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4 background-colour-grey">
					<li>
						<%= link_to gravator_for(user), user_path(user) %>
					</li>
					<li class="color-white-bold">
						<%= link_to user.username, user_path(user), style: "color: white;"%>
					</li>
					<li class="color-white-bold">
						<%= pluralize(user.articles.count, "article") if user.articles %>
					</li>
				</div>
			</div>
		</ul>
	<% end %>	
</div>
