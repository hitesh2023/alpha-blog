<h1 class="color-white-bold col-sm-offset-2">Signup Up for Alpha Blog</h1>
<br>
<br>

<%= render 'shared/errors',obj: @user %>

<br/>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@user, :html => {:class => "form-horizontal" , role: "form"}) do |t|%>
            <div class="form-group">
                <div class="col-sm-2 control-label color-white-bold">
                    <%= t.label :username %><br/>
                </div>
                <div class="col-sm-8">
                  <%= t.text_field :username, rows: 1, class: "form-control", placeholder: "Enter username" %>    
                </div>
            </div>
            <br>


            <div class="form-group">
                <div class="col-sm-2 control-label color-white-bold">
                    <%= t.label :email %><br/>    
                </div>
                <div class="col-sm-8">
                   <%= t.email_field :email, class: "form-control", placeholder: "Enter email" %>    
                </div>
                
            </div>
            <br>

             <div class="form-group">
                <div class="col-sm-2 control-label color-white-bold">
                    <%= t.label :password %><br/>    
                </div>
                <div class="col-sm-8">
                   <%= t.password_field :password, class: "form-control", placeholder: "Enter password" %>    
                </div>
                
            </div>
            <br>



            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <%= t.submit 'Sign Up',class: "btn btn-primary btn-lg" %>    
                    <%= t.submit 'Back', class: "btn btn-danger btn-lg"%>    
                </div>
            </div>
        <% end %>
    </div>
</div>

