<h1 class="color-white-bold col-sm-offset-2">LOGIN TO ALPHA BLOG</h1>
<br>
<br>
<%= form_for(:session, :html => {:class => "form-horizontal" , role: "form"}, url: login_path) do |t|%>

    <div class="form-group">
        <div class="col-sm-2 control-label color-white-bold">
            <%= t.label :email %><br/>    
        </div>
        <div class="col-sm-8">
           <%= t.email_field :email, class: "form-control", placeholder: "Enter email" %>    
        </div>
        
    </div>
    <br>

     <div class="form-group">
        <div class="col-sm-2 control-label color-white-bold">
            <%= t.label :password %><br/>    
        </div>
        <div class="col-sm-8">
           <%= t.password_field :password, class: "form-control", placeholder: "Enter password" %>    
        </div>
        
    </div>
    <br>



    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <%= t.submit 'Log In', class: "btn btn-primary btn-lg" %>    
            <%= t.submit 'Back', class: "btn btn-danger btn-lg"%>    
        </div>
    </div>
<% end %>