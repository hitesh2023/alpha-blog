<% if @article.errors.any? %>
 	<p>These errors below prevent from creating an article</p>
	<ul>
		<% @article.errors.full_messages.each do |msg|%>
		  <li><%= msg %></li>
		<% end %>	
	</ul>

<% end %>

<br/>

<%= form_for @article do |t|%>
 	<p>
 		<%= t.label :title %><br/>
 		<%= t.text_field :title %>
    </p>

    <p>
    	<%= t.label :description %><br/>
    	<%= t.text_area :description %>
    </p>

    <p>
    	<%= t.submit %>
    </p>	

<% end %>