
<h1 align="center" class="color-white-bold">LISTING ALL CATEGORIES</h1>



<div align="center">
	<%= will_paginate %>
</div>


<div align="center">
	<% @categories.each do |category| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4 background-colour-grey">
					<li class="color-white-bold">
						<%= link_to "#{category.name}", category_path(category), style: "color: white; text-transform: uppercase; text-decoration: none;"%>
					</li>

					<li class="color-white-bold">
						<small>
							<%= pluralize(category.articles.count, "article") %>
						</small>
					</li>
					<% if logged_in? and current_user.admin? %>
						<%= link_to 'Edit this Category', edit_category_path(category), class: "btn btn-warning btn-sm col-sm-4 col-sm-offset-4", role: "button" %>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>	
</div>

<div align="center">
	<%= will_paginate %>
</div>
